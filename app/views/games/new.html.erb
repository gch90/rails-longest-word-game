<h1>New Game</h1>
<ul>
<%@letters.each do|letter|%>
  <li style="display:inline"><%=letter%></li>
<%end%>
</ul>
<form action="/score">
  <label for="score-id">What is the longest word you can find ?</label>
  <input type="text" name="score" id="score-id">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
